%html
%head
  %title Phazam
  %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
  = stylesheet_link_tag 'application'
  %script{:charset => "utf-8", :src => "//d3js.org/d3.v3.min.js"}
  = javascript_include_tag 'application'
  = csrf_meta_tags
%body
  .container-fluid
    .ul.nav.nav-tabs
      %li= link_to "Home", root_path
      %li= link_to "View Photos", images_path
      - if current_user
        %li= link_to "Start A New Challenge", new_challenge_path
      .user-info.navbar-right
        - if current_user
          Hello
          = link_to (current_user.name || current_user.email), current_user
          = link_to edit_user_registration_path, class: 'btn btn-primary btn-sm' do
            %span.glyphicon.glyphicon-user
          = link_to destroy_user_session_path, method: :delete, class: 'btn btn-primary btn-sm' do
            %span.glyphicon.glyphicon-log-out
        - else
          = link_to "Sign In", new_user_session_path
          or
          = link_to "Sign Up", new_user_registration_path
    - if flash[:notice]
      .alert.alert-success
        %button{type: "button",class: "close",dismiss: "alert"} &times;
        = flash[:notice]
    - elsif flash[:error]
      .alert.alert-danger
        %button{type: "button",class: "close",dismiss: "alert"} &times;
        = flash[:error]
    - elsif flash[:alert]
      .alert.alert-warning
        %button{type: "button",class: "close",dismiss: "alert"} &times;
        = flash[:alert]
    = yield